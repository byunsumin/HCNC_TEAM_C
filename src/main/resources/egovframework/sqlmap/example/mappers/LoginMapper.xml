<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hcnc.cteam.post.LoginMapper">

    <!-- 아이디로 사용자 정보 조회 -->
    <select id="getUserByUserId" parameterType="string" resultType="map">
	    SELECT id, password, name, email, dep_code, emp_code, assign_code  
	    FROM employee
	    WHERE id = #{userId}
	    <!--AND assign_code >= 5-->
	</select>
    <!-- 사용자 인증 상태 업데이트 -->
    <update id="updateUserVerificationStatus">
        UPDATE employee
        SET verified = 1  <!-- 인증 상태를 1로 업데이트 -->
        WHERE id = #{userId}
    </update>

</mapper>

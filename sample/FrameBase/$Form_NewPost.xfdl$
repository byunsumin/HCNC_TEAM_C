        <Button id="Button01" taborder="3" text="upload" left="512" top="140" width="120" height="50" onclick="Button01_onclick"/>
        <TextArea id="TextArea00" taborder="4" left="642" top="80" width="482" height="120" onchanged="TextArea00_onchanged"/>
        <Static id="title" taborder="5" text="제목" left="24" top="28" width="69" height="41"/>
        <Edit id="Edit_title" taborder="6" left="52" top="31" width="460" height="39"/>

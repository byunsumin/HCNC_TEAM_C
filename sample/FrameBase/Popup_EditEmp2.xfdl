<?xml version="1.0" encoding="utf-8"?>
<FDL version="2.1">
  <Form id="Popup_EditEmp" width="530" height="440" titletext="직원 정보 수정" background="whitesmoke" onclick="Popup_EditEmp_onclick" onload="Popup_EditEmp_onload">
    <Objects>
      <Dataset id="ds_employee">
        <ColumnInfo>
          <Column id="id" type="STRING" size="256"/>
          <Column id="password" type="STRING" size="256"/>
          <Column id="name" type="STRING" size="256"/>
          <Column id="birth" type="STRING" size="256"/>
          <Column id="gender" type="STRING" size="256"/>
          <Column id="phone" type="STRING" size="256"/>
          <Column id="address" type="STRING" size="256"/>
          <Column id="email" type="STRING" size="256"/>
          <Column id="account" type="STRING" size="256"/>
          <Column id="upd_name" type="STRING" size="256"/>
        </ColumnInfo>
      </Dataset>
      <Dataset id="ds_gender">
        <ColumnInfo>
          <Column id="value" type="STRING" size="256"/>
          <Column id="text" type="STRING" size="256"/>
        </ColumnInfo>
        <Rows>
          <Row>
            <Col id="value">남성</Col>
            <Col id="text">남성</Col>
          </Row>
          <Row>
            <Col id="value">여성</Col>
            <Col id="text">여성</Col>
          </Row>
        </Rows>
      </Dataset>
    </Objects>
    <Layouts>
      <Layout width="530" height="440">
        <Static id="Title" text="직원 정보 수정" left="20" top="10" width="420" height="40" textAlign="center" font="bold 18pt/normal 'Arial'" background="whitesmoke"/>
        <!-- 두 번째 행: ID, 비밀번호 -->
        <Static id="lblID" text="ID" left="30" top="80" width="80" height="30" textAlign="left" onclick="lblID_onclick"/>
        <Edit id="edtID" left="70" top="80" width="110" height="30" binddataset="ds_employee" text="bind:id"/>
        <Static id="lblPassword" text="새로운 비밀번호" left="230" top="80" width="90" height="30" textAlign="left"/>
        <Edit id="edtPassword" left="330" top="80" width="110" height="30" binddataset="ds_employee" text="bind:password" password="true"/>
        <!-- 세 번째 행: 이름, 생년월일 -->
        <Static id="lblName" text="이름" left="30" top="130" width="80" height="30" textAlign="left"/>
        <Edit id="edtName" left="70" top="130" width="110" height="30" binddataset="ds_employee" text="bind:name"/>
        <Static id="lblBirth" text="생년월일" left="270" top="130" width="80" height="30" textAlign="left" onclick="lblBirth_onclick"/>
        <Calendar id="calBirth" left="330" top="130" width="110" height="30" binddataset="ds_employee" datecolumn="birth" dateformat="yyyy.MM.dd" editformat="yyyy.MM.dd"/>
        <!-- 네 번째 행: 성별, 전화번호 -->
        <Static id="lblGender" text="성별" left="30" top="195" width="80" height="25" textAlign="left"/>
        <Combo id="cmbGender" left="70" top="190" width="110" height="30" innerdataset="ds_gender" codecolumn="value" datacolumn="text" binddataset="ds_employee" value="bind:gender"/>
        <Static id="lblPhone" text="전화번호" left="270" top="195" width="80" height="25" textAlign="left"/>
        <Edit id="edtPhone" left="330" top="190" width="110" height="30" binddataset="ds_employee" text="bind:phone"/>
        <!-- 다섯 번째 행: 주소, 이메일 -->
        <Static id="lblAddress" text="주소" left="30" top="253" width="80" height="25" textAlign="left"/>
        <Edit id="edtAddress" left="70" top="250" width="110" height="30" binddataset="ds_employee" text="bind:address"/>
        <Static id="lblEmail" text="이메일" left="280" top="253" width="80" height="25" textAlign="left"/>
        <Edit id="edtEmail" left="330" top="250" width="110" height="30" binddataset="ds_employee" text="bind:email"/>
        <!-- 여섯 번째 행: 입사일, 퇴사일 -->
        <!-- 일곱 번째 행: 계좌번호, 부서장코드 -->
        <Static id="lblAccount" text="계좌번호" left="20" top="305" width="80" height="25" textAlign="left"/>
        <Edit id="edtAccount" left="70" top="305" width="105" height="30" binddataset="ds_employee" text="bind:account"/>
        <!-- 수정 버튼 -->
        <Button id="btnUpdate" text="수정" left="180" top="400" width="80" height="30" background="green" color="white" borderRadius="5px" cursor="pointer" onclick="btnUpdate_onclick"/>
        <Button id="btnClose" text="닫기" left="280" top="400" width="80" height="30" background="gray" color="white" borderRadius="5px" cursor="pointer" onclick="btnClose_onclick"/>
      </Layout>
    </Layouts>
    <Bind>
      <BindItem id="item3" compid="edtID" propid="value" datasetid="ds_employee" columnid="id"/>
      <BindItem id="item4" compid="edtPassword" propid="value" datasetid="ds_employee" columnid="password"/>
      <BindItem id="item5" compid="edtName" propid="value" datasetid="ds_employee" columnid="name"/>
      <BindItem id="item6" compid="calBirth" propid="value" datasetid="ds_employee" columnid="birth"/>
      <BindItem id="item7" compid="cmbGender" propid="value" datasetid="ds_employee" columnid="gender"/>
      <BindItem id="item8" compid="edtPhone" propid="value" datasetid="ds_employee" columnid="phone"/>
      <BindItem id="item9" compid="edtAddress" propid="value" datasetid="ds_employee" columnid="address"/>
      <BindItem id="item10" compid="edtEmail" propid="value" datasetid="ds_employee" columnid="email"/>
      <BindItem id="item13" compid="edtAccount" propid="value" datasetid="ds_employee" columnid="account"/>
    </Bind>
  </Form>
</FDL>
